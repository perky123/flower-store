<!-- Form area -->
<div class="admin-form">

    <div class="row">
      <div class="col-md-12">
        <!-- Widget starts -->
            <div class="widget">
              <!-- Widget head -->
              <div class="widget-head">
                <i class="icon-lock"></i> 管理员登录
              </div>

              <div class="widget-content">
                <div class="padd">
          <% if flash[:notice] %>
            <div class="notice">
              <h2><%= flash[:notice] %></h2>
              <!-- <a href="logon.html">点击这里登录</a> -->
            </div>
          <% end %>
                  <!-- Login form -->
          <form class="form-horizontal" action="/login/verify">
            <%= form_tag "/login/veify", class: "form-login" do %>
              <div class="form-group">
                <label class="control-label col-lg-3" for="inputEmail">用户名</label>
                <div class="col-lg-9">
                  <span><%= text_field_tag :name, "", class: "form-control", placeholder: "用户名"%></span>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-lg-3" for="inputEmail">密码</label>
                <div class="col-lg-9">
                  <span><%= password_field_tag :password ,"", class: "form-control", placeholder: "密码"%></span>
                </div>
              </div>
                    <!-- Remember me checkbox and sign in button -->
            <div class="form-group">
					<div class="col-lg-9 col-lg-offset-3">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> Remember me
                  </label>
						</div>
					</div>
					</div>
            <div class="col-lg-9 col-lg-offset-3">
            <!-- <%= submit_tag "登录",:class=>"btn btn-danger"%> -->
				<button type="submit" class="btn btn-danger">Sign in</button>
    				<button type="reset" class="btn btn-default">Reset</button>
    			</div>
          <br />
          <% end %>
        </form>
				  
				</div>
              </div>
            
            </div>  
      </div>
  </div> 
</div>
	
		

<!-- JS -->
<script src="js/jquery.js"></script>
<script src="js/bootstrap.js"></script>